{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "node:20" 
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "scripts": {
    "install": "npm install",
    "build": "npm run build",
    "start": "npm run start"
  }
}

